<%= form_for(@adventure) do |f| %>
  <div class="field">
    <%= f.label :name, "Adventure Name" %>
    <%= f.text_field :name, placeholder: "Name for your new adventure.." %>
    <%= f.label :comments, "Comments" %>
    <%= f.text_area :comments %>
  </div>
  <%= f.submit  "Post", class: "btn btn-large btn-primary" %>
<% end %>
